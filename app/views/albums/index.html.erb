<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white" style="transition: all 0.3s ease;">Photo Albums</h1>
    <div class="flex items-center space-x-4" data-controller="dark-mode">
      <!-- Dark Mode Toggle -->
      <div class="flex items-center space-x-3 bg-gray-100 dark:bg-gray-800 px-3 py-2 rounded-lg border border-gray-300 dark:border-gray-600" style="transition: all 0.3s ease;">
        <span class="text-sm text-gray-600 dark:text-gray-300">ðŸŒž</span>
        <div 
          data-action="click->dark-mode#toggle" 
          data-dark-mode-target="toggle"
          class="relative w-12 h-6 bg-gray-400 dark:bg-blue-600 rounded-full cursor-pointer transition-colors duration-200">
          <div class="absolute top-0.5 left-0.5 w-5 h-5 bg-white rounded-full transition-transform duration-200 dark:translate-x-6 shadow-sm border border-gray-200"></div>
        </div>
        <span class="text-sm text-gray-600 dark:text-gray-300">ðŸŒ™</span>
      </div>
      <%= link_to 'New Album', new_album_path, class: 'bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors' %>
    </div>
  </div>

  <!-- Test dark mode with inline styles -->
  <div id="dark-mode-test" class="mb-4 p-4 bg-white dark:bg-gray-900 rounded-lg border border-gray-200 dark:border-gray-700" style="transition: all 0.3s ease;">
    <p class="text-gray-800 dark:text-gray-200">Dark mode test: This should change colors when toggled</p>
  </div>

  <% if @albums.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      <% @albums.each do |album| %>
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
          <% if album.photos.any? %>
            <%= link_to album_path(album) do %>
              <div class="aspect-video bg-gray-200 relative overflow-hidden">
                <% first_photo = album.photos.first %>
                <% if first_photo.image.attached? && first_photo.thumbnail_url %>
                  <%= image_tag first_photo.thumbnail_url, 
                      alt: 'Photo', 
                      class: 'w-full h-full object-cover',
                      style: 'object-fit: cover;',
                      loading: 'lazy' %>
                <% else %>
                  <div class="w-full h-full flex items-center justify-center text-gray-400">
                    <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                <% end %>
                <div class="absolute bottom-2 right-2 bg-black bg-opacity-50 text-white text-xs px-2 py-1 rounded">
                  <%= album.photos.count %> photos
                </div>
              </div>
            <% end %>
          <% else %>
            <%= link_to album_path(album) do %>
              <div class="aspect-video bg-gray-200 relative overflow-hidden flex items-center justify-center">
                <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <div class="absolute bottom-2 right-2 bg-black bg-opacity-50 text-white text-xs px-2 py-1 rounded">
                  0 photos
                </div>
              </div>
            <% end %>
          <% end %>
          
          <div class="p-4">
            <%= link_to album_path(album), class: 'block' do %>
              <h3 class="font-semibold text-lg text-gray-900 hover:text-blue-600 transition-colors"><%= album.name %></h3>
            <% end %>
            <div class="mt-3 flex justify-between items-center">
              <%= link_to 'View', album_path(album), class: 'text-blue-600 hover:text-blue-800 text-sm font-medium' %>
              <div class="flex space-x-2">
                <%= link_to 'Edit', edit_album_path(album), class: 'text-gray-600 hover:text-gray-800 text-sm' %>
                <%= link_to 'Delete', album_path(album), 
                    data: { 
                      turbo_method: :delete,
                      turbo_confirm: 'Are you sure you want to delete this album and all its photos?' 
                    }, 
                    class: 'text-red-600 hover:text-red-800 text-sm' %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
      </svg>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No albums yet</h3>
      <p class="text-gray-600 mb-4">Create your first photo album to get started.</p>
      <%= link_to 'Create Album', new_album_path, class: 'bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors' %>
    </div>
  <% end %>
</div>
